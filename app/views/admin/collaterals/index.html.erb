<div class="container pt-5">
  <div class="row ml-4">
    <h4>担保種類</h4>
  </div>
  <div class="row ml-4">
    <%= link_to "戻る", admin_about_path %>
  </div>
</div>
<div class="container mt-3">
  <div class="row mt-5 ml-3">
    <%= form_with model: @collateral, url: admin_collaterals_path, local:true do |f| %>
    <table>
      <tbody>
        <tr>
          <td>
            <div class="mr-5">
              担保種類
            </div>
          </td>
          <td>
            <div class="mr-5">
              <%= f.text_field :collateral %>
            </div>
          </td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

  <div class="row mt-5">
    <div class="col-md-4">
      <table class="table">
        <thead>
          <tr>
            <th>
              <div class="mr-5">
                資金種類
              </div>
            </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @collaterals.each do |collateral| %>
            <tr>
              <td>
                <div class="mr-5">
                  <%= link_to edit_admin_collateral_path(collateral) do %>
                    <%= collateral.id %>.<%= collateral.collateral %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>